{
    "compilerOptions": {
        "lib": ["es2021"],
        "module": "commonjs",
        "target": "es2021",

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "preserveConstEnums": true,
        "outDir": "./dist",
        "baseUrl": "./",
    },
    "include": ["src/**/*", "test/test-cyclonedx.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}